<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/header.ejs', {title: 'AFV Adoption Home'}) %>
    <link rel="stylesheet" href="/styles/fishDetails.css">
</head>

<body>
    <%- include('./partials/nav.ejs') %>

    <div>
        <section class="petsList">
            <h2 class="nameFish">Fish</h2>
             <ul class="pet-grid">
                <li>
                    <figure>
                        <img src="<%= Fish.photo %>">
                    </figure>
                    <figcaption>
                        <div class="featured-info">
                            <h3><%= Fish.Name %></h3>
                            <p class="describe"><%= Fish.Description %></p>
                            <p>Rating: <%=Fish.Rating%></p>
                            <p>Price: <%=Fish.Price%></p>
                            <p>Quantity: <%=Fish.Quantity%></p>
                            <ul>
                              <% Fish.review.forEach(function(review) { %>
                                <li><strong>Reviewer:</strong><%= review.reviewer %></li>
                                <li> <strong>Title:</strong><%= review.title %></li>
                                <li><strong>Content:</strong><%= review.content%></li>
                                <li><br></li>
                              <% }); %>
                            </ul>

                        </div>
                    </figcaption>
                </li>
            </ul> 
        </section>
        <section class="actions">
            <button class="btn" id="edit"><a href="/fishRoutes/<%= Fish._id %>/edit">Edit</a></button>
            
                <form method="POST" action="/fishRoutes/<%=Fish._id%>/purchase?_method=PUT">
                <input class="btn" type="submit" value="Purchase"/>
            </form>
       
                <form method="POST" action="/fishRoutes/<%= Fish._id %>?_method=DELETE">
                    <input class="btn" type="submit" value="Delete"/>
                </form>
                        <button class="btn" id="review"><a href="/reviews/<%=Fish._id%>">Leave A Review</a></button>
                        <form method="PUT" action="'/create<%= Fish._id %>/buy?_method=PUT">
            </form>
           <section>
             
           </section>
        </section>
    </div>

    <%- include('./partials/footer.ejs') %>
</body>

</html>
