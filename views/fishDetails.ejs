<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/header.ejs', {title: 'AFV Adoption Home'}) %>
    <link rel="stylesheet" href="/styles/fishDetails.css">
</head>

<body>
    <%- include('./partials/nav.ejs') %>

    <div>
        <section class="petsList">
            <h2>Pets</h2>
             <ul class="pet-grid">
                <% for (let fish of Fish) { %>
                <li>
                    <figure>
                        <img src="<%= fish.photo %>">
                    </figure>
                    <figcaption>
                        <div class="featured-info">
                            <h3><%= fish.Name %></h3>
                            <p class="describe"><%= fish.Description %></p>
                        </div>
                    </figcaption>
                </li>
                <% } %>
            </ul> 
        </section>
    </div>

    <%- include('./partials/footer.ejs') %>
</body>

</html>
