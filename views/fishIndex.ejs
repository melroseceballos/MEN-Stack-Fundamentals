<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/header.ejs', {title: 'AFV Adoption Home'}) %>
    <link rel="stylesheet" href="/styles/fishIndex.css">
</head>

<body>
    <%- include('./partials/nav.ejs') %>

    <main>
        <section class="listings">
            <h1>Available Pets</h1>
            <ul>
                <% for (let fish of Fish) { %>
                <li>
                    <figure>
                        <img src="<%= fish.photo %>">
                        <figcaption>
                            <h4><%= fish.Name %></h4>
                            <p>Rating: <%=fish.Rating%></p>
                            <p>Price: <%=fish.Price%></p>
                            <p>Quantity: <%=fish.Quantity%></p>
                            <p><%=fish.Description%></p>

                        </figcaption>
                    </figure>
                </li>
                <% } %>
            </ul>
        </section>
    </main>

    <%- include('./partials/footer.ejs') %>
</body>

</html>
